    }
    
        // JavaScript for auto-sliding the carousel
        $(document).ready(function(){
            // Set the interval (in milliseconds) for auto-sliding
            var interval = 3000; // 5000 milliseconds = 5 seconds

            // Function to move to the next slide
            function nextSlide() {
                $('.carousel').carousel('next');
            }

            // Set up the interval to call the nextSlide function
            setInterval(nextSlide, interval);
        });
    
</script>

