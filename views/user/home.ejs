<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        
    }

    .carousel-item {
        height: 300px; /* Adjust the height as needed */
    }

    .product-card {
        margin: 0;
        padding: 0;
        border: 5px solid #9d00ff; /* Thick borders */
        border-radius: 5px; /* Rounded corners */
        box-shadow: 5px 5px 5px #e7e7e7; /* Box shadow */
        transition: all 0.3s ease-in-out; /* Smooth transition on hover */
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-card img {
        width: 100%; /* Set width to 100% for responsiveness */
        height: 200px; /* Set fixed height for the image */
        border-radius: 5px; /* Rounded corners for images */
    }

    .product-card:hover {
        transform: scale(1.05); /* Expand on hover */
    }

    .product-text {
        color:rgb(128, 0, 0);
        margin-top: 10px;
        text-align: center;
        padding: 10px;
        border-radius: 5px;
        background-image: linear-gradient(-225deg, #DFFFCD 0%, #90F9C4 48%, #39F3BB 100%);
        font-size: 18px; /* Default font size */
    }

    .product-text:hover {
        transform: scale(1.05); /* Expand on hover */
        background-image: linear-gradient(to top, #007adf 0%, #00ecbc 100%);
    }

    @media (max-width: 576px) {
        .product-card img {
            height: 100px; /* Decrease fixed height for small screens */
        }

        .product-text {
            font-size: 10px; /* Decrease font size for small screens */
        }
    }

    @media (min-width: 577px) and (max-width: 768px) {
        .product-card img {
            height: 150px; /* Decrease fixed height for medium screens */
        }

        .product-text {
            font-size: 12px; /* Decrease font size for medium screens */
        }
    }

    @media (min-width: 769px) and (max-width: 992px) {
        .product-card img {
            height: 175px; /* Decrease fixed height for large screens */
        }

        .product-text {
            font-size: 14px; /* Decrease font size for large screens */
        }
    }

    @media (min-width: 993px) {
        .product-card img {
            height: 200px; /* Default fixed height for extra-large screens */
        }

        .product-text {
            font-size: 16px; /* Default font size for extra-large screens */
        }
    }
</style>
<section>
    
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% for (let i = 0; i < Math.ceil(products.length / 4); i++) { %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" <% if (i === 0) { %>class="active"<% } %>></li>
          <% } %>
        </ol>
        <div class="carousel-inner pb-5" style="background-image: linear-gradient(-225deg, #FF3CAC 0%, #562B7C 52%, #2B86C5 100%);">
          <% for (let i = 0; i < Math.ceil(products.length / 4); i++) { %>
            <div class="carousel-item <% if (i === 0) { %>active<% } %>">
              <div class="container py-5">
                <div class="row col-12">
                  <% for (let j = i * 4; j < Math.min((i + 1) * 4, products.length); j++) { %>
                    <div class="col-5 col-md-4 col-lg-3">
                      <div class="product-card" id="product<%= j  %>" onclick="productClicked('<%= products[j]._id %>')">
                        <img src="./images/productImages/<%= products[j].images.image1.name %>" alt="Product <%= j  %>">
                      </div>
                      <p class="product-text">
                        <%= products[j].brandName %>
                        
                    </p>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      
    
</section>
