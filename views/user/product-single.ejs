        #image-container {
            display: flex;
            align-items: center;
            position: relative;
        }

        #thumbnail-container {
            display: flex;
            flex-direction: column;
            margin-right: 20px;
        }

        .thumbnail {
            width: 70px;
            border: #000000;
            height: auto;
            cursor: pointer;
            margin-bottom: 10px;
        }

        #main-image {

            width: 100%;
            height: 600px;
            object-fit: cover;
            /* This property will stretch the image to cover the specified dimensions */
            object-position: center;
            /* This property will center the image within the container */

        }

        .expand-button {
            position: absolute;
            bottom: 1.5rem;
            right: 2rem;
            cursor: pointer;
            background-color: #fff;
            padding: 5px;
            border-radius: 3px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }

