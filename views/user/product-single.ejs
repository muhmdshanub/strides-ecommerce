            var currentIndex = imagePathsFromDatabase.indexOf(mainImageSrc);
            var prevIndex = (currentIndex - 1 + imagePathsFromDatabase.length) % imagePathsFromDatabase.length;
            mainImageSrc = imagePathsFromDatabase[prevIndex];
