<%- include('../layouts/admin-header') -%>


<style>
    .tm-product-img-dummy {
        max-width: 100%; /* Ensure the image does not exceed its container's width */
        overflow: hidden; /* Hide any overflow beyond the container */
    }

    .tm-product-img-dummy img {
        max-width: 100%; /* Ensure the image itself does not exceed its container's width */
        height: auto; /* Maintain the aspect ratio of the image */
    }
</style>


    <%- include('../layouts/admin-navbar') -%>

        <div class="container tm-mt-big tm-mb-big">
            <div class="row">
                <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                    <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                        <%- include('../layouts/_messages.ejs') -%>
                        <div class="row">
                            <div class="col-12">
                                <h2 class="tm-block-title d-inline-block">Add Product</h2>
                            </div>
                        </div>

                        <form action="" class="tm-edit-product-form" method="post" enctype="multipart/form-data">
                            <div class="row tm-edit-product-row">
                                <div class="col-xl-6 col-lg-6 col-md-12">

                                    <div class="form-group mb-3">
                                        <label for="brandName">BRAND</label>
                                        <input id="brandName" name="brandName" type="text" class="form-control validate"
                                            required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="productName">Product Name</label>
                                        <input id="productName" name="productName" type="text"
                                            class="form-control validate" required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="description">Description</label>
                                        <textarea name="description" class="form-control validate" rows="3" required></textarea>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="gender">Gender</label>
                                        <select class="custom-select tm-select-accounts" id="gender" name="gender" required>
                                            <option value="" selected>Select gender</option>
                                            <option value="men">MEN</option>
                                            <option value="women">WOMEN</option>
                                            <option value="unisex">UNISEX</option>
                                        </select>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="colors">Colors</label>

                                        <div class="border rounded">
                                            <label for="colorBlack">Black</label>
                                            <input type="checkbox" id="colorBlack" name="colors[]" value="black">

                                            <label for="colorWhite">White</label>
                                            <input type="checkbox" id="colorWhite" name="colors[]" value="white">

                                            <label for="colorBlue">Blue</label>
                                            <input type="checkbox" id="colorBlue" name="colors[]" value="blue">

                                            <label for="colorRed">Red</label>
                                            <input type="checkbox" id="colorRed" name="colors[]" value="red">

                                            <label for="colorGreen">Green</label>
                                            <input type="checkbox" id="colorGreen" name="colors[]" value="green">

                                            <label for="colorYellow">Yellow</label>
                                            <input type="checkbox" id="colorYellow" name="colors[]" value="yellow">

                                            <label for="colorOrange">Orange</label>
                                            <input type="checkbox" id="colorOrange" name="colors[]" value="orange">

                                            <label for="colorPink">Pink</label>
                                            <input type="checkbox" id="colorPink" name="colors[]" value="pink">

                                            <label for="colorPurple">Purple</label>
                                            <input type="checkbox" id="colorPurple" name="colors[]" value="purple">

                                            <label for="colorGrey">Grey</label>
                                            <input type="checkbox" id="colorGrey" name="colors[]" value="grey">

                                            <label for="colorBrown">Brown</label>
                                            <input type="checkbox" id="colorBrown" name="colors[]" value="brown">
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="category">Category</label>
                                        <select class="custom-select tm-select-accounts" id="category" name="category">
                                            <option selected>Select category</option>
                                            <option value="formals">FORMALS</option>
                                            <option value="casuals">CASUALS</option>
                                            <option value="sports">SPORTS</option>
                                        </select>
                                    </div>


                                    <div class="row form-group mb-3 text-white">
                                        <div class="col-xs-12">
                                            <label for="sizeAndStock">Size wise stock</label>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Size</th>
                                                        <th>Available Stock</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Small</td>
                                                        <td><input type="text" name="available_stock_small"
                                                                class="form-control" required /></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Medium</td>
                                                        <td><input type="text" name="available_stock_medium"
                                                                class="form-control" required /></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Large</td>
                                                        <td><input type="text" name="available_stock_large"
                                                                class="form-control" required /></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Extra Large</td>
                                                        <td><input type="text" name="available_stock_extra_large"
                                                                class="form-control" required /></td>
                                                    </tr>
                                                    <!-- Add more size rows as needed -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="price">PRICE</label>
                                        <input id="price" name="price" type="text" class="form-control validate"
                                            required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="discount">DISCOUNT</label>
                                        <input id="discount" name="discount" type="text" class="form-control validate"
                                            required />
                                    </div>

                                </div>
                                <!-- Your existing HTML content -->

                                <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                                    

                                    <% for (let i = 1; i <= 4; i++) { %>
                                        <!-- Image upload placeholders for <%= i %> -->
                                        <div class="tm-product-img-dummy mx-auto">
                                          <!-- ... existing code ... -->
                                          <img id="selectedImage<%= i %>" src="#" alt="Selected Image" style="display: none;">
                                          <button class="btn btn-danger btn-sm position-absolute top-0 end-0"
                                            style="display: none;" onclick="removeSelectedImage(<%= i %>)">Remove Image</button>
                                          <i class="fas fa-cloud-upload-alt tm-upload-icon"
                                            onclick="document.getElementById('fileInput<%= i %>').click();"></i>
                                        </div>
                                      
                                        <!-- File input and upload button for <%= i %> -->
                                        <div class="custom-file mt-3 mb-3">
                                          <input id="fileInput<%= i %>" type="file" style="display:none;"
                                            onchange="displaySelectedImage(<%= i %>);" required name="images" />
                                          <input type="hidden" name="image<%= i %>Index" value="<%= i %>">
                                          <input type="button" class="btn btn-primary btn-block mx-auto"
                                            value="UPLOAD PRODUCT IMAGE <%= i %>" onclick="document.getElementById('fileInput<%= i %>').click();" required />
                                        </div>
                                      <% } %>
                                    
                                    

                                </div>



                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product
                                        Now</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Function to display the selected image
            function displaySelectedImage(imageNumber) {
                var fileInput = document.getElementById('fileInput' + imageNumber);
                var selectedImage = document.getElementById('selectedImage' + imageNumber);
                var removeButton = document.querySelector('#selectedImage' + imageNumber + '+button');

                // Check if a file is selected
                if (fileInput.files && fileInput.files[0]) {
                    var reader = new FileReader();

                    // Set up the reader to read the selected image
                    reader.onload = function (e) {
                        selectedImage.src = e.target.result;
                        selectedImage.style.display = 'block';
                        removeButton.style.display = 'block';
                    };

                    // Read the selected image as a data URL
                    reader.readAsDataURL(fileInput.files[0]);
                }

                // Hide the upload button and icon after image is selected
                document.querySelector('#fileInput' + imageNumber).style.display = 'none';
                document.querySelector('#fileInput' + imageNumber).nextElementSibling.style.display = 'none';
            }

            // Function to remove the selected image
            function removeSelectedImage(imageNumber) {
                var fileInput = document.getElementById('fileInput' + imageNumber);
                var selectedImage = document.getElementById('selectedImage' + imageNumber);
                var removeButton = document.querySelector('#selectedImage' + imageNumber + '+button');

                // Reset the file input and hide the image and remove button
                fileInput.value = '';
                selectedImage.src = '#';
                selectedImage.style.display = 'none';
                removeButton.style.display = 'none';

                // Show the upload button and icon
                document.querySelector('#fileInput' + imageNumber).style.display = 'block';
                document.querySelector('#fileInput' + imageNumber).nextElementSibling.style.display = 'block';
            }
        </script>

