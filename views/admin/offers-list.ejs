<%- include('../layouts/admin-header') -%>

<body id="reportsPage">

    <%- include('../layouts/admin-navbar') -%>

    <div class="container-fluid mt-5">
        <div class="row tm-content-row">
            <div class="col-12 tm-block-col">
                <div class="tm-bg-primary-dark tm-block tm-block-category">

                    <%- include('../layouts/_messages') -%>

                    <a href="/admin/offers-add" class="btn btn-primary btn-block text-uppercase mb-3">Add new
                        Offer</a>
                    <div class="tm-category-table-container">
                        <table class="table table-hover tm-table-small tm-category-table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Discount Percentage</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Valid From</th>
                                    <th scope="col">Valid Upto</th>
                                    <th scope="col">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% if (offers.length > 0) {
                                    for (let i = 0; i < offers.length; i++) { %>

                                        <tr style="background-color: rgb(255, 255, 255); color: black;">

                                            <td class="tm-offers-name">
                                                <%= offers[i].name %>
                                            </td>
                                            <td class="tm-offers-description">
                                                <%= offers[i].description %>
                                            </td>

                                            <td class="tm-offers-percentage">
                                                <%= offers[i].percentageDiscount %>%
                                            </td>

                                            <td class="tm-offers-type">
                                                <%= offers[i].offerType %>
                                            </td>

                                            <td class="tm-offers-category">
                                                <%= offers[i].offerType === 'category' ? offers[i].category.name : '- -' %>
                                            </td>

                                            <td class="tm-offers-product">
                                                <%= offers[i].offerType === 'product' ? offers[i].product.brandName + " "+ offers[i].product.productName : '- -' %>
                                            </td>

                                            <td class="tm-offers-validFrom">
                                                <%= offers[i].validFrom ? offers[i].validFrom.toLocaleDateString() : '- -' %>
                                            </td>
                                            <td class="tm-offers-validUpto">
                                                <%= offers[i].validUpto ? offers[i].validUpto.toLocaleDateString() : '- -' %>
                                            </td>
                                            

                                        </tr>

                                        <% } } else { %>
                                            <tr>
                                                <td colspan="7">No Offers found.</td>
                                            </tr>
                                            <% } %>

                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                                <div>
                                    <% if (currentPage> 1) { %>
                                        <a href="?page=<%= currentPage - 1 %>" class="border rounded p-2 m-1 bg-white"
                                            style="color: rgb(255, 157, 0);">Previous</a>
                                        <% } %>

                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <a href="?page=<%= i %>" <%=i===currentPage
                                                    ? 'class="active text-black"' : '' %> class=" border rounded p-2 m-1
                                                    bg-white" style="color: rgb(255, 157, 0);"><%= i %></a>

                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <a href="?page=<%= currentPage + 1 %>"
                                                            class="border rounded p-2 m-1 bg-white"
                                                            style="color: rgb(255, 157, 0);">Next</a>
                                                        <% } %>
                                </div>

                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/admin-footer') -%>
