<%- include('../layouts/admin-header') -%>

    <body id="reportsPage">

        <%- include('../layouts/admin-navbar') -%>

            <div class="container-fluid mt-5">
                <div class="row tm-content-row">
                    <div class="col-12 tm-block-col">
                        <div class="tm-bg-primary-dark tm-block tm-block-category">

                            <%- include('../layouts/_messages') -%>

                                
                            <a href="/admin/category-add" class="btn btn-primary btn-block text-uppercase mb-3">Add
                                new
                                Category</a>
                                <div class="tm-category-table-container">
                                    <table class="table table-hover tm-table-small tm-category-table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Products</th>
                                                <th scope="col">Total Sales</th>
                                                <th scope="col">Sales in 30 days</th>
                                                <th scope="col">&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            <% if(categories.length>0){
                                                for(let i=0; i<categories.length; i++){ %>

                                                    <tr style="background-color: rgb(255, 255, 255);color: black;">


                                                        

                                                        <td class="tm-category-name">
                                                            <%= categories[i].name %>
                                                        </td>
                                                        <td class="tm-category-description">
                                                            <%= categories[i].description %>
                                                        </td>

                                                        <td class="tm-category-name">
                                                            <%= categories[i].productsCount %>
                                                        </td>

                                                        <td class="tm-category-orderCount">
                                                            <%= categories[i].ordersCount %>
                                                        </td>

                                                        <td class="tm-category-thirtyDayOrdercount">
                                                            <%= categories[i].ordersCountIn30Days %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/category-edit/<%= categories[i]._id %>"
                                                                class="tm-category-edit-link">
                                                                <i
                                                                    class="far fa-edit tm-category-edit-icon text-black"></i>
                                                            </a>
                                                        </td>

                                                       
                                                    </tr>

                                                    <% } } else { %>
                                                        <tr>
                                                            <td colspan="5">No Categories found.</td>
                                                        </tr>
                                                        <% } %>

                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <div>
                                    <% if (currentPage> 1) { %>
                                        <a href="?page=<%= currentPage - 1 %>" class="border rounded p-2 m-1 bg-white"
                                            style="color: rgb(255, 157, 0);">Previous</a>
                                        <% } %>

                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <a href="?page=<%= i %>" <%=i===currentPage
                                                    ? 'class="active text-black"' : '' %> class=" border rounded p-2 m-1
                                                    bg-white" style="color: rgb(255, 157, 0);"><%= i %></a>

                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <a href="?page=<%= currentPage + 1 %>"
                                                            class="border rounded p-2 m-1 bg-white"
                                                            style="color: rgb(255, 157, 0);">Next</a>
                                                        <% } %>
                                </div>
                                
                        </div>
                    </div>
                </div>
            </div>



            




            <%- include('../layouts/admin-footer') -%>