        <script>
           
           function initCropper(imageNumber) {
    const fileInput = document.getElementById('fileInput' + imageNumber);
    const croppedImage = document.getElementById('croppedImage' + imageNumber);
    const removeButton = document.getElementById('removeButton' + imageNumber);
    const changeButton = document.getElementById('changeButton' + imageNumber);

    console.log('fileInput:', fileInput);
    console.log('croppedImage:', croppedImage);
    console.log('removeButton:', removeButton);
    console.log('changeButton:', changeButton);

    changeButton.style.display = 'none'; // Hide upload button

    if (fileInput.files && fileInput.files[0]) {
        const reader = new FileReader();

        reader.onload = function (e) {
            // Display the cropped image
            croppedImage.src = e.target.result;
            croppedImage.style.display = 'block';

            // Initialize Cropper.js
            const cropper = new Cropper(croppedImage, {
                aspectRatio: NaN,
                viewMode: 0,
                // Add more options based on your requirements
            });

            // Save the cropper instance for later use (optional)
            fileInput.cropper = cropper;

            // Display the crop result when the crop button is clicked
            const cropButton = document.createElement('button');
            cropButton.innerText = 'Crop';
            cropButton.className = 'btn btn-success btn-sm mt-2';
            cropButton.type = 'button'; // Change the type to button
            cropButton.onclick = function () {
                const croppedCanvas = cropper.getCroppedCanvas();

                // Convert the cropped canvas to a Blob
                croppedCanvas.toBlob(function (blob) {
                    // Create a new DataTransfer object
                    const dataTransfer = new DataTransfer();

                    // Create a new File and add it to the DataTransfer object
                    const croppedFile = new File([blob], fileInput.files[0].name, { type: blob.type });
                    dataTransfer.items.add(croppedFile);

                    // Set the 'files' property of the existing file input
                    fileInput.files = dataTransfer.files;

                    // Display the cropped image
                    croppedImage.src = URL.createObjectURL(blob);
                    croppedImage.style.display = 'block';

                    // Show remove button
                    removeButton.style.display = 'block';

                    // Hide upload button
                    changeButton.style.display = 'none';

                    // Remove the crop button
                    fileInput.parentElement.removeChild(cropButton);
                }, fileInput.files[0].type);
            };

            // Check if the next sibling exists before accessing its style property
            if (fileInput.nextElementSibling) {
                fileInput.parentElement.appendChild(cropButton);
            }
        };

        reader.readAsDataURL(fileInput.files[0]);
    }

    // Hide the upload button and icon after the image is selected
    fileInput.style.display = 'none';

    // Check if the next sibling exists before accessing its style property
    if (fileInput.nextElementSibling) {
        fileInput.nextElementSibling.style.display = 'none';
    }
}





            function cropImage(imageNumber) {
                const fileInput = document.getElementById('fileInput' + imageNumber);
                const originalImageName = document.getElementById('originalImage' + imageNumber).value;
                const cropButton = document.getElementById('cropButton' + imageNumber);
                const changeButton = document.getElementById('changeButton' + imageNumber);
                const imageModifiedInput = document.getElementById('imageModified' + imageNumber);

                if (fileInput.cropper) {
                    const croppedCanvas = fileInput.cropper.getCroppedCanvas();

                    // Convert the cropped canvas to a Blob
                    croppedCanvas.toBlob(function (blob) {
                        // Create a new File from the Blob
                        const croppedFile = new File([blob], originalImageName, { type: blob.type });

                        // Create a new FormData object and append the cropped file
                        const formData = new FormData();
                        formData.append('images', croppedFile);

                        // Create a DataTransfer object and add the new file
                        const dataTransfer = new DataTransfer();
                        dataTransfer.items.add(new File([blob], originalImageName, { type: blob.type }));

                        // Set the DataTransfer object to the files property of the existing file input
                        fileInput.files = dataTransfer.files;

                        // Set imageModified to true
                        imageModifiedInput.value = 'true';

                        // Hide the crop button and show the change button
                        cropButton.style.display = 'none';
                        changeButton.style.display = 'block';

                        // Optional: Add logic to handle the cropped image
                    }, fileInput.files[0].type);
                }
            }



        </script>

